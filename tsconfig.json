{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "qrcode-react": [ "typings/qrcode-react.d.ts" ],
            "components/*": [ "components/*" ],
            "app/*": [ "app/*" ],
            "pages/*": [ "pages/*" ],
            "core/*": [ "core/*" ],
            "common/*": [ "common/*" ],
            "types/*": [ "types/*" ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}